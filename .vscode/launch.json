    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "port": 9222,
            "urlFilter": "http://localhost:9222/*",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "launch firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:9222",
            "pathMappings": [{
                "url": "http://localhost:9222",
                "path": "${workspaceFolder}"
            }]
        }
    ]
}